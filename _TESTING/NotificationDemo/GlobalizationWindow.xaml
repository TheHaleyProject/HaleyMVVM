<Window x:Class="NotificationDemo.GlobalizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:hm="http://schemas.hpod9.com/haley/mvvm"
        xmlns:ext="clr-namespace:HaleyLR;assembly=LocalizationResources"
        xmlns:local="clr-namespace:NotificationDemo"
        mc:Ignorable="d"
        Title="GlobalizationWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <ComboBox x:Name="cmbbxLanguages" Height="30" VerticalAlignment="Top" SelectionChanged="cmbbxLanguages_SelectionChanged"/>
            <TextBlock Text="{hm:Lang MainHello}"/>
            <TextBlock Text="{hm:Lang LocalHello, ProviderKey=LocalizationResources}"/>
        </StackPanel>
        <ext:TestControl Grid.Column="1"/>
    </Grid>
</Window>
